RewriteEngine on
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1 [NC,L,R]

RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^ %{REQUEST_URI}.html [NC,L]

RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://www.clientcreator.org/$1 [R=301,L]

AddType application/x-httpd-php -htm .html

ErrorDocument 400 https://www.clientcreator.org/errors/400
ErrorDocument 401 https://www.clientcreator.org/errors/401
ErrorDocument 403 https://www.clientcreator.org/errors/403
ErrorDocument 404 https://www.clientcreator.org/errors/404
ErrorDocument 500 https://www.clientcreator.org/errors/500
ErrorDocument 503 https://www.clientcreator.org/errors/503
